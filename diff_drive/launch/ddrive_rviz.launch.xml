<launch>
    <!-- controls whether the joint_state_publisher_gui is launched -->
    <arg name="view_only" default="true"/>
    <!-- decides which rviz config is being used -->
    <arg name="rviz_config" default="ddrive_rviz" />

    <!-- launch the robot_state_publisher, with the turtle robot xacro loaded -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command '$(exec-in-pkg xacro xacro) $(find-pkg-share diff_drive)/ddrive.urdf.xacro')"/>
    </node>

    <!-- launch rviz -->
    <node name="rviz2" pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share diff_drive)/config/$(var rviz_config).rviz"/>

    <!-- launch the joint_state_publisher w/ the GUI for testing the URDF -->
    <group if="$(var view_only)">
        <node 
            name="joint_state_publisher_gui" 
            pkg="joint_state_publisher_gui"
            exec="joint_state_publisher_gui" >
        </node>
    </group>
    
</launch>